{
  "id": "Sample Test",
  "configs": {
    "baseUrl": "https://jsonplaceholder.typicode.com",
    "defaultEndpoint": "/posts",
    "defaultMethod": "post",
    "defaultBody": {},
    "asyncLimit": 1,
    "delay": 2000,
    "beforeAllScript": "scripts/beforeAllScript.js",
    "afterAllScript": "scripts/afterAllScript.js"
  },
  "scenarios": [
    {
      "label": "Validate Posting Valid Data",
      "beforeScript": "scripts/beforeScript.js",
      "afterScript": "scripts/afterScript.js",
      "request": {
        "method": "post",
        "body": {
          "id": 12345,
          "title": "Foo",
          "body": "Blah blah blah 1"
        },
        "fields": [
          { "path": "$.id", "value": 123456 },
          { "path": "$.title", "value": "My Amazing Post" },
          {
            "path": "$.body",
            "value": "This is my amazing post with valid values"
          }
        ]
      },
      "response": {
        "status": 201,
        "fields": [
          { "path": "$.title", "value": "My Amazing Post" },
          {
            "path": "$.body",
            "value": "This is my amazing post with valid values"
          }
        ]
      }
    },
    {
      "label": "Validate Posting Duplicate ID",
      "request": {
        "body": {
          "id": 6789,
          "title": "Bar",
          "body": "Blah blah blah 2"
        }
      },
      "response": {
        "status": 500,
        "matchStrings": ["Error: Insert failed, duplicate id"]
      }
    }
  ]
}
