{
  "name": "Sample Test",
  "configs": {
    "baseUrl": "https://jsonplaceholder.typicode.com",
    "defaultEndpoint": "/posts",
    "defaultMethod": "post",
    "defaultBody": {
      "id": 88888,
      "title": "BarBar",
      "body": "Blah blah blah 2"
    },
    "defaultBodyPath": "./data/body.json",
    "asyncLimit": 1,
    "delay": 2000,
    "beforeAllScript": "scripts/beforeAllScript.js",
    "beforeEachScript": "scripts/beforeEachScript.js",
    "afterAllScript": "scripts/afterAllScript.js"
  },
  "scenarios": [
    {
      "test": "Validate Posting Valid Data",
      "beforeScript": "scripts/beforeScript.js",
      "afterScript": "scripts/afterScript.js",
      "request": {
        "method": "post",
        "body": {
          "id": 12345,
          "title": "Foo",
          "body": "Blah blah blah 1"
        },
        "fields": [
          { "path": "$.title", "value": "My Amazing Post" },
          { "path": "$.body", "value": "This is my amazing post with valid values" }
        ]
      },
      "response": {
        "status": 201,
        "fields": [
          { "path": "$.title", "value": "My Amazing Post" },
          { "path": "$.body", "value": "This is my amazing post with valid values" }
        ]
      }
    },
    {
      "test": "Validate Posting Default Body Path",
      "response": {
        "status": 201,
        "fields": [
          { "path": "$.title", "value": "FooFoo" },
          { "path": "$.body", "value": "Blah blah blah X" }
        ]
      }
    }
  ]
}
